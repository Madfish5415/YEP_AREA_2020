{
  "name": "area-mobile",
  "version": "1.0.0",
  "description": "Mobile client for AREA",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "build:android": "cd android/ && ./gradlew build",
    "build:ios": "cd ios/ && xcodebuild build",
    "run:android": "react-native run-android",
    "run:ios": "react-native run-ios",
    "start": "react-native start",
    "start:android": "((sleep 5 && yarn run:android) &) && yarn start",
    "start:ios": "((sleep 5 && yarn run:ios) &) && yarn start",
    "clean": "rm -rf build/",
    "clean:android": "cd android/ && ./gradlew clean",
    "clean:ios": "cd ios/ && xcodebuild clean",
    "fclean": "yarn clean && rm -rf node_modules/",
    "postinstall": "node postinstall.js"
  },
  "dependencies": {
    "@area-common/blocs": "*",
    "@area-common/styles": "*",
    "@felangel/react-bloc": "^0.3.0",
    "@react-native-async-storage/async-storage": "^1.14.1",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.11.7",
    "@react-navigation/material-bottom-tabs": "^5.3.13",
    "@react-navigation/native": "^5.9.2",
    "@react-navigation/stack": "^5.14.2",
    "react": "^17.0.1",
    "react-hook-form": "^6.15.1",
    "react-native": "^0.63.4",
    "react-native-gesture-handler": "^1.9.0",
    "react-native-paper": "^4.7.1",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-screens": "^2.17.1",
    "react-native-vector-icons": "^7.1.0"
  },
  "devDependencies": {
    "@area-common/types": "*",
    "@babel/core": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@types/react": "^17.0.0",
    "@types/react-native": "^0.63.45",
    "metro-react-native-babel-preset": "^0.64.0"
  }
}
